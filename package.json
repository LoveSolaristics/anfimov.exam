{
  "private": true,
  "scripts": {
    "start": "browser-sync start --server src --no-notify --no-ui --cwd src --files index.html,styles/**/*",
    "test": "editorconfig-checker --exclude '.git|node_modules|.DS_Store|dist'",
    "html": "html-minifier --remove-comments --collapse-whitespace --input-dir src --output-dir dist --file-ext html",
    "styles": "postcss src/styles/index.css --use postcss-import --use postcss-url --use postcss-csso --no-map --output dist/styles/index.css",
    "build": "npm run html && npm run styles",
    "deploy": "cd dist && rsync --archive --compress --delete . pepelsbey@pepelsbey.dev:/var/www/pepelsbey.dev/html/",
    "gulpfile": "gulp"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-terser": "^1.2.0",
    "postcss-csso": "^4.0.0",
    "postcss-import": "^12.0.1",
    "postcss-media-minmax": "^4.0.0"
  },
  "dependencies": {
    "editorconfig-checker": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-url": "^8.0.0"
  }
}
